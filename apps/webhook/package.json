    "axios": "^1.8.4",
    "body-parser": "^1.20.2",
    "close-with-grace": "^2.2.0",
    "cors": "^2.8.5",
    "eslint": "^8.57.0",
    "fastify": "^5.2.1",
    "morgan": "^1.10.0",
    "telegraf": "^4.16.3",
    "@repo/queue-config": "workspace:*"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@repo/jest-presets": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.24",
    "@types/supertest": "^6.0.2",
    "esbuild": "^0.20.1",
    "esbuild-register": "^3.5.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.3",
    "typescript": "5.5.4"
